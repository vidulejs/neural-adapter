FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 0
);

regions
(
    sphereToCell
    {
        centre (1 1 0.05);
        radius 0.75;
        fieldValues
        (
            volScalarFieldValue T 1
        );
    }
);

